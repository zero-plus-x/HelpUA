datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UILanguage {
  ENGLISH
  RUSSIAN
  UKRAINIAN
}

enum SpokenLanguage {
  ENGLISH
  RUSSIAN
  UKRAINIAN
  SWEDISH
  POLISH
  ROMANIAN
  GERMAN
}

enum Category {
  URGENT_CARE
  TRANSPORTATION
  LOCAL_INFORMATION
  ACCOMODATION
  MEDICAL_HELP
}

model User {
  id               Int        @id @default(autoincrement())
  telegramUserId   Int        @unique
  telegramUsername String?
  chatId           Int
  uiLanguage       UILanguage
  offers           Offer[]
  requests         Request[]
}

model Offer {
  id                 Int              @id @default(autoincrement())
  user               User             @relation(fields: [userId], references: [id])
  lastCandidateFound DateTime?
  userId             Int
  category           Category
  languages          SpokenLanguage[]
  candidateRequests  Request[]        @relation("OfferToRequestCandidate")
  matchedRequest     Request?
}

model Request {
  id              Int              @id @default(autoincrement())
  user            User             @relation(fields: [userId], references: [id])
  userId          Int
  dateCreated     DateTime         @default(now())
  category        Category
  languages       SpokenLanguage[]
  candidateOffers Offer[]          @relation("OfferToRequestCandidate")
  matchedOffer    Offer?           @relation(fields: [matchedOfferId], references: [id])
  matchedOfferId  Int?             @unique
}
